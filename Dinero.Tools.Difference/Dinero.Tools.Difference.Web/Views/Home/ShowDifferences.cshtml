@using Dinero.Tools.Difference.Core.Models
@model Dinero.Tools.Difference.Web.ViewModels.ShowDifferencesViewModel

@{
//ViewBag.Title = "title";
}

<div class="container theme-showcase" role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>Theme example</h1>

        <p>Bank Saldo: @Model.DifferenceResult.TotalBank.ToString("C")</p>
        <p>Dinero Saldo: @Model.DifferenceResult.TotalDinero.ToString("C")</p>
        <p>Difference: @Model.DifferenceResult.TotalDifference.ToString("C")</p>

    </div>


    <div class="row">
        <div class="col-md-6">
            <h2>Bank</h2>
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Dato</th>
                        <th>Tekst</th>
                        <th>Beløb</th>
                        <th>Afstemt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bankEntry in @Model.DifferenceResult.OriginalBankEntries)
            {
                        <tr>
                            <td>@bankEntry.Date.ToString("dd-MM-yyyy")</td>
                            <td>@bankEntry.Text</td>
                            <td>@bankEntry.Amount.ToString("C")</td>
                            <td>
                                @if (bankEntry.Status == EntryStatus.Balanced)
                                {
                                    <span class="label label-success">Ja</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Nej</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Dinero</h2>
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Dato</th>
                        <th>Tekst</th>
                        <th>Beløb</th>
                        <th>Afstemt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dineroEntry in @Model.DifferenceResult.OriginalDineroEntries)
            {
                        <tr>
                            <td>@dineroEntry.Date.ToString("dd-MM-yyyy")</td>
                            <td>@dineroEntry.Text</td>
                            <td>@dineroEntry.Amount.ToString("C")</td>
                            <td>
                                @if (dineroEntry.Status == EntryStatus.Balanced)
                                {
                                    <span class="label label-success">Ja</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Nej</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>